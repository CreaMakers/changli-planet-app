<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_bg_top_bar"
    android:paddingTop="@dimen/dp35"
    android:paddingBottom="@dimen/dp10"
    tools:showIn="@layout/activity_time_table">
    <TextView
        android:id="@+id/tv_top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="课程表"
        android:textColor="@color/color_title_top"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/courseRefresh"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30"
        android:background="@null"
        android:src="@drawable/coursetable_ic_refresh"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:tint = "@color/color_title_top"/>
        <ProgressBar
            android:id="@+id/courseRefreshLoading"
            android:layout_width="@dimen/dp30"
            android:layout_marginEnd="20dp"
            android:layout_height="@dimen/dp30"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/color_title_top"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
