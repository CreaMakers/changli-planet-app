<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/left_all"
    android:paddingVertical="@dimen/circle_item_padding"
    android:background="@drawable/tab_backgroud_selector">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/circle_item_size"
        android:layout_height="@dimen/circle_item_size"
        app:cardCornerRadius="@dimen/circle_item_size_half"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/chat_left_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/fulilian" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chat_left_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:textStyle="bold"
            android:textColor="@drawable/text_color_selector"
            android:textSize="18sp"
            android:paddingHorizontal="1dp"
            android:text="学习" />

        <View
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/chat_group_blue"
            android:visibility="visible"/>

    </LinearLayout>

</LinearLayout>