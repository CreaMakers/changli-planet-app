<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/md_theme_inversePrimary_highContrast"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:padding="@dimen/dp10"
            app:tint = "@color/md_theme_onPrimaryContainer"
            tools:src="@drawable/ic_back" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/sp18"
            android:textColor="@color/md_theme_onPrimaryContainer"
            android:textStyle="bold"
             android:text="@string/top_bar_comments"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp20"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toTopOf="@+id/input_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/dp10"
        tools:listitem="@layout/item_comments"/>
    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/md_theme_outline"
        app:layout_constraintBottom_toTopOf="@id/input_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:id="@+id/input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dp10"
        android:paddingTop="@dimen/dp10"
        android:paddingBottom="@dimen/dp10"
        android:background="@color/md_theme_onPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <EditText
            android:id="@+id/et_comment"
            android:background="@drawable/bg_response_edit"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp35"
            android:paddingHorizontal="@dimen/dp3"
            android:lineHeight="@dimen/dp35"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:textSize="@dimen/sp15"
            android:hint="@string/et_tint"
            android:maxLines="5"
            android:inputType="textMultiLine|textCapSentences"
            android:scrollbars="vertical"
            android:gravity="center_vertical" />
        
        <ImageView
            android:id="@+id/iv_send"
            android:padding="@dimen/dp6"
            android:layout_width="@dimen/dp35"
            android:layout_height="@dimen/dp35"
            android:src="@drawable/ic_send"
            tools:srcCompat="@drawable/ic_send"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>