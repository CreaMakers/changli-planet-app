<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_bg_primary"
    tools:context=".settings.ui.ChangeEmailActivity">

    <LinearLayout
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingBottom="8dp"
        android:background="@color/color_bg_top_bar"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/blue_left_back"
            android:tint = "@color/color_title_top"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="更改邮箱"
            android:gravity="center"
            android:textColor="@color/color_title_top"
            android:textSize="24sp"
            android:textStyle="bold"/>
        <Space
            android:layout_width="32dp"
            android:layout_height="32dp"/>
    </LinearLayout>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="30dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/color_bg_card">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:id="@+id/cur_password"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="30dp"
                android:hint="当前密码"
                android:paddingStart="16dp"
                android:inputType="text"
                android:textColorHint="@color/color_text_grey"
                android:textColor="@color/color_text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/edit_text_background"/>

            <EditText
                android:id="@+id/new_email"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="30dp"
                android:hint="新邮箱"
                android:paddingStart="16dp"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/color_text_grey"
                android:textColor="@color/color_text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/edit_text_background"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp">
                <EditText
                    android:id="@+id/captcha"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="验证码"
                    android:paddingStart="16dp"
                    android:inputType="number"
                    android:textColorHint="@color/color_text_grey"
                    android:textColor="@color/color_text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/edit_text_background"/>
                <TextView
                    android:id="@+id/get_captcha"
                    android:text="获取验证码"
                    android:paddingEnd="20dp"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_gravity="end"
                    android:textColor="@color/color_text_functional"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </FrameLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/change_email_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="13dp"
        android:backgroundTint="@color/color_bg_button"
        android:textColor="@color/color_text_button"
        android:text="确认修改"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="4dp" />
</LinearLayout>