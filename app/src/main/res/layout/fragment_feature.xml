<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/feature"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dp35"
    tools:context=".Fragment.FeatureFragment">

    <ImageView
        android:id="@+id/planet_logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/planet_logo"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/featureAvatar"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/component1"
        android:layout_marginStart="11dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/CircleStyle" />

    <androidx.cardview.widget.CardView
        android:id="@+id/mainfunction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="12dp"
        android:baselineAligned="false"
        android:layout_marginHorizontal="15dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@+id/planet_logo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/userui"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:paddingVertical="10dp"
            app:layout_constraintTop_toBottomOf="@+id/planet_logo">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="常用功能"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <com.example.changli_planet_app.Widget.View.FunctionItem
                    android:id="@+id/ngrade"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:itemTitle="成绩查询" />

                <com.example.changli_planet_app.Widget.View.FunctionItem
                    android:id="@+id/ncourse"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:itemTitle="课表" />

                <com.example.changli_planet_app.Widget.View.FunctionItem
                    android:id="@+id/nmap"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:itemTitle="校园地图" />

                <com.example.changli_planet_app.Widget.View.FunctionItem
                    android:id="@+id/ncet"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:itemTitle="四六级" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <com.example.changli_planet_app.Widget.View.FunctionItem
                    android:id="@+id/ntest"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:itemTitle="考试安排" />

                <com.example.changli_planet_app.Widget.View.FunctionItem
                    android:id="@+id/ncalender"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:itemTitle="校历" />

                <com.example.changli_planet_app.Widget.View.FunctionItem
                    android:id="@+id/nelectronic"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:itemTitle="电费查询" />

                <com.example.changli_planet_app.Widget.View.FunctionItem
                    android:id="@+id/nmande"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:itemTitle="普通话" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:elevation="12dp"
        android:baselineAligned="false"
        android:layout_marginHorizontal="15dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@+id/mainfunction">

        <LinearLayout
            android:id="@+id/help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/userui"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:paddingVertical="10dp"
            app:layout_constraintTop_toBottomOf="@+id/mainfunction">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="其他"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <com.example.changli_planet_app.Widget.View.FunctionItem
                    android:id="@+id/nlose"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:itemTitle="失物招领" />


                <com.example.changli_planet_app.Widget.View.FunctionItem
                    android:id="@+id/nrank"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:itemTitle="学霸排行" />

                <com.example.changli_planet_app.Widget.View.FunctionItem
                    android:id="@+id/nclassroom"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:itemTitle="空闲教室" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
