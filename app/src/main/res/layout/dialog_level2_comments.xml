<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation= "vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_primary">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_level2Comments"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/dp8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/v_divider"
        tools:listitem="@layout/item_comment_level2"/>
    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/color_divider"
        app:layout_constraintBottom_toTopOf="@id/input_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:id="@+id/input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dp10"
        android:paddingTop="@dimen/dp10"
        android:paddingBottom="@dimen/dp10"
        android:background="@color/color_bg_secondary"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/et_comment"
            android:background="@drawable/edit_text_background"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp35"
            android:paddingHorizontal="@dimen/dp3"
            android:lineHeight="@dimen/dp35"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:textSize="@dimen/sp15"
            android:hint="@string/et_tint"
            android:textColorHint="@color/color_text_grey"
            android:textColor="@color/color_text_primary"
            android:maxLines="5"
            android:inputType="textMultiLine|textCapSentences"
            android:scrollbars="vertical"
            android:gravity="center_vertical" />

        <ImageView
            android:id="@+id/iv_send"
            android:padding="@dimen/dp6"
            android:layout_width="@dimen/dp35"
            android:layout_height="@dimen/dp35"
            android:src="@drawable/ic_send"
            android:tint = "@color/color_icon_primary"
            tools:srcCompat="@drawable/ic_send"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>