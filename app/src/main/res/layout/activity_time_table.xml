<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".feature.timetable.ui.TimeTableActivity"
    android:background="@color/color_bg_primary">

    <!-- 顶部头部布局 -->
    <include
        android:id="@+id/header_layout"
        layout="@layout/time_table_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:clickable="false"
        android:focusable="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:src="@drawable/coursetable_ic_calendar"
                android:tint="@color/color_icon_secondary"
                />

            <TextView
                android:id="@+id/courseTerm"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:text="2024-2025-1"
                android:textColor="@color/color_text_primary"
                android:textSize="18sp"

                />


        </LinearLayout>

        <Space
            android:layout_width="25dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/courseWeek"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="第8周"
                android:textColor="@color/color_text_primary"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/weeksExtendBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/coursetable_ic_extend"
                android:tint = "@color/color_icon_secondary"
                />

            <TextView
                android:id="@+id/isCurWeek"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="本周"
                android:textColor="@color/color_text_primary"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.creamaker.changli_planet_app.widget.view.ScrollTimeTableView
            android:id="@+id/timetableView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_bg_primary" />

        <RelativeLayout
            android:id="@+id/loadingLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80FFFFFF"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="#4C81CE" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/progressBar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="加载中..."
                android:textColor="#4C81CE"
                android:textSize="14sp" />
        </RelativeLayout>


    </FrameLayout>


</LinearLayout>