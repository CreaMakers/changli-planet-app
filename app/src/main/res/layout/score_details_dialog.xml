<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:paddingTop="22dp"
    android:paddingHorizontal="20dp"
    android:paddingBottom="16dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- 成绩详细 -->
        <TextView
            android:id="@+id/detail_score_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text=" |成绩详细"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- 标题 -->
        <TextView
            android:id="@+id/detail_score_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/detail_score_action"
            android:layout_marginEnd="8dp"
            android:text="高等数学数学数学"
            android:textColor="#333333"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <!-- 内容 -->
    <TextView
        android:id="@+id/detail_score_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:text="账号或密码错误，请重新输入"
        android:textColor="#666666"
        android:textSize="15sp" />

    <!-- 分割线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E5E5E5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <!-- 确定按钮 -->
        <TextView
            android:id="@+id/chosen_yes"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="确定"
            android:textColor="#4285F4"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>