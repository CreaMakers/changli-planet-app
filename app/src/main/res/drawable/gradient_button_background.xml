<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="0" android:endColor="#4A71B0" android:startColor="#7498BC" android:type="linear" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <!-- 正常状态 -->
    <item>
        <shape>
            <gradient android:angle="0" android:endColor="#5C8EDC" android:startColor="#91BEEB" android:type="linear" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>