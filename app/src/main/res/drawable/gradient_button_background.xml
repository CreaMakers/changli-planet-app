<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="0" android:endColor="@color/color_bg_card_high_contrast" android:startColor="@color/color_bg_card_high_contrast" android:type="linear" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <!-- 正常状态 -->
    <item>
        <shape>
            <gradient android:angle="0" android:endColor="@color/color_bg_button" android:startColor="@color/color_bg_button" android:type="linear" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>